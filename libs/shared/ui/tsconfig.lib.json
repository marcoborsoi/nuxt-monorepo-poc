{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noEmit": false,
    "outDir": "../../../dist/out-tsc",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"]
  },
  "exclude": [
    "src/**/__tests__/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx",
    "src/**/*.stories.ts",
    "src/**/*.stories.js"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.json",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tailwind.config.ts"
  ]
}
